<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.axiasoft.vote_back.admin.dao">
    <select id="getNoticeList" parameterType="hashmap" resultType="hashmap">
        SELECT
            *
        FROM
            axia.Notice
        WHERE
            1=1

        AND
        <if test="searchType != 1">
              nt_title LIKE '%#{searchText}%'
        </if>
        <if test="searchType != 1 and searchType != 0">
        OR
        </if>
        <if test="searchType != 0">
            nt_contents LIKE '%#{searchText}%'
        </if>
        <if test="start_idx != null and !start_idx.equals('') and page_size != null and !page_size.equals('')">
            LIMIT #{start_idx}, #{page_size}
        </if>
    </select>
</mapper>
